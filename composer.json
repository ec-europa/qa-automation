{
    "name": "ec-europa/qa-automation",
    "description": "Extra php codesniffs for QualityAssurance.",
    "type": "phpcodesniffer-standard",
    "homepage": "https://github.com/ec-europa/qa-automation",
    "support": {
        "issues": "https://github.com/ec-europa/qa-automation/issues",
        "source": "https://github.com/ec-europa/qa-automation"
    },
    "keywords": [
        "phpcs",
        "standards",
        "code review"
    ],
    "require": {
        "openeuropa/code-review": "^1.0@beta",
        "openeuropa/task-runner": "^1.0.0-beta6",
        "phpcompatibility/php-compatibility": "^9.1"
    },
    "autoload": {
        "psr-0": {
            "QualityAssurance\\": "phpcs/QualityAssurance/"
        },
        "psr-4": {
            "EcEuropa\\QaAutomation\\": "./src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": ">=3.7 <6"
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "enable-patching": true
    },
    "scripts": {
        "post-install-cmd": "$(pwd)/vendor/bin/phpcs --config-set installed_paths '../../drupal/coder/coder_sniffer,../../phpcompatibility/php-compatibility,../../ec-europa/qa-automation/phpcs'",
        "post-update-cmd" : "$(pwd)/vendor/bin/phpcs --config-set installed_paths '../../drupal/coder/coder_sniffer,../../phpcompatibility/php-compatibility,../../ec-europa/qa-automation/phpcs'"
    }
}
